---
export interface Props {
  recommendation: {
    data: {
      name: string;
      title: string;
      avatar: string;
      date: string;
      relationship: string;
      linkedinUrl: string;
    };
    body: string;
  };
}

const { recommendation } = Astro.props;
---

<div class="max-w-md mx-auto">
  <div
    class="relative overflow-hidden bg-gradient-to-r from-purple-600 to-indigo-600 rounded-xl shadow-2xl p-8 text-white">
    <div class="absolute top-0 left-0 w-full h-full bg-white opacity-10 transform -skew-x-12"></div>
    <div class="relative z-10">
      <svg class="w-12 h-12 mb-4 text-purple-300" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
      </svg>
      <p class="text-xl font-medium mb-4">
        {recommendation.body}
      </p>
      <div class="flex items-center">
        <img src={recommendation.data.avatar} alt={recommendation.data.name} class="w-12 h-12 rounded-full mr-4 border-2 border-purple-300">
        <div>
          <h4 class="font-semibold">{recommendation.data.name}</h4>
          <p class="text-purple-200">{recommendation.data.title}</p>
        </div>
      </div>
    </div>
  </div>
</div>