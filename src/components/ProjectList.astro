---
import type {Project} from '../pages/projects/projects';
import TagPill from '../components/TagPill.astro';

const {projects} = Astro.props;
---

<div class='grid grid-cols-12 gap-5'>
    {
        projects.map((project: Project) => (
                <div class='col-span-12 sm:col-span-6 lg:col-span-6 border dark:border-zinc-700 rounded-xl shadow-sm p-5'>
                    <h1 class='font-semibold my-2 text-xl'>
                        <a href={project.demoLink} target='_blank' rel={project.demoLinkRel}
                           class="underline hover:font-extrabold transition-all duration-150">
                            {
                                project.isFeatured == false
                                    ? <span>{project.name}</span>
                                    : <span class='text-2xl beige-amber-gradient-wave dark:purple-red-gradient-wave'>
                                        {project.name}
                                    </span>
                            }
                        </a>
                    </h1>
                    {project.isUnderConstruction &&
                            <p class="pb-3 font-extralight text-sm italic">&#x1F6A7; Under Development</p>
                    }
                    {project.version !== undefined &&
                            <p class="pb-3 font-extrabold">
                                <span class="font-light">Version</span> {project.version}
                            </p>
                    }

                    <div class='text-zinc-600 dark:text-zinc-300 mb-4 min-h-[150px]'>
                        <p>{project.description}</p>
                    </div>
                    <div class='flex flex-wrap gap-2'>
                        {(project.tags || [])?.map((tag: string) => (
                                <TagPill tag={tag}/>))}
                    </div>
                    <div class='flex justify-end gap-3 pt-2'>
                        {project.postLink && (
                                <a class='underline flex items-center gap-2' href={project.postLink}>Article</a>
                        )}
                        {project.publishedPackageLink !== undefined && (
                                <a class='underline flex items-center gap-2 hover:font-extrabold transition-all duration-150'
                                   target="_blank"
                                   href={project.publishedPackageLink}>
                                    View Package
                                </a>
                        )}
                    </div>
                </div>
        ))
        }
        </div>
